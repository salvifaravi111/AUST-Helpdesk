<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ezio.myapplication.Spintest"
    android:background="#AFAFAF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_dept"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:id="@+id/dept1"
        />

    <Spinner
        android:id="@+id/dept2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/dept1"


        ></Spinner>


    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_sem"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:id="@+id/sem1"
        />
    <Spinner
        android:id="@+id/sem2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/sem1"
        android:layout_marginTop="100dp"
        ></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_sec"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/sec1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200dp"
        />
    <Spinner
        android:id="@+id/sec2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/sec1"
        android:layout_marginTop="200dp"
        ></Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Routine"
        android:id="@+id/button29"
        android:layout_below="@+id/sec2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"
        android:onClick="go"
        android:background="#0EAFA5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffff"/>


</RelativeLayout>
